<html>
	<head>
		<title>{{title}}</title>
		{{asset "css"}}
	</head>
	<body>
		<can-import from="bitballs/styles.less!" />
		<can-import from="bitballs/app" export-as="viewModel" />
		<can-import from="bitballs/components/navigation/navigation" />
		<div class="container">
			<bitballs-navigation {(app-state)}="." />

			{{{pageComponent}}}

		</div>
		{{asset "inline-cache"}}

		{{#isProduction}}
			<script
				src="{{joinBase 'node_modules/steal/steal.production.js'}}"  
				main="index.stache!done-autorender">
			</script>
		{{else}}
			<script src="/node_modules/steal/steal.js"></script>
		{{/isProduction}}
	</body>
</html>
