<html>
  <head>
    <title>{{title}}</title>
    {{asset "css"}}
  </head>
  <body>
    <can-import from="bitballs/styles.less!" />
    <can-import from="bitballs/app" as="viewModel" />
	<can-import from="bitballs/components/navigation" />
	<can-import from="bitballs/components/player/list/" />
	<can-import from="bitballs/components/player/edit" />
	<can-import from="bitballs/components/tournament/list" />
	<can-import from="bitballs/components/tournament/details/" />
	<can-import from="bitballs/components/game/details" />
	<can-import from="bitballs/components/user/create" />
	<div class="container">
		<bitballs-navigation app-state="{.}"/>

		{{{pageComponent}}}

	</div>
    {{asset "inline-cache"}}

    {{#isProduction}}
      <script src="/node_modules/steal/steal.production.js"
        main="index.stache!done-autorender"></script>
    {{else}}
      <script src="/node_modules/steal/steal.js"></script>
    {{/isProduction}}
  </body>
</html>
