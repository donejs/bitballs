<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{{title}}</title>
	</head>
	<body>
		<can-import from="bitballs/app.less!" />
		<can-import from="bitballs/app" export-as="viewModel" />
		<can-import from="bitballs/components/navigation/navigation" />
		<div class="container">
			<bitballs-navigation {app}="." />
			{{{pageComponent}}}

		</div>
		{{#isProduction}}
			<script
				src="{{joinBase 'node_modules/steal/steal.js'}}"
				env="production"
				main="bitballs/index.stache!done-autorender">
			</script>
		{{else}}
			<script src="/node_modules/steal/steal.js" main="bitballs/index.stache!done-autorender"></script>
		{{/isProduction}}
	</body>
</html>
