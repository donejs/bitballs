{
  "name": "bitballs",
  "version": "0.3.1",
  "description": "A basketball tournament app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "node public/build.js",
    "develop": "node index.js --develop",
    "db-migrate": "db-migrate up",
    "document": "documentjs -d",
    "test": "npm run jshint && cd public/ && npm test",
    "jshint": "jshint ./ --config .jshintrc",
    "install": "node install.js && npm run db-migrate"
  },
  "dependencies": {
    "async": "^2.2.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.13.3",
    "bookshelf": "^0.10.3",
    "checkit": "^0.7.0",
    "cookie-parser": "^1.4.1",
    "db-migrate": "^0.9.18",
    "ejs": "^2.3.1",
    "express": "~4.15.2",
    "express-session": "^1.11.3",
    "knex": "^0.12.9",
    "lodash": "^4.17.4",
    "nodemailer": "^3.1.8",
    "npm": "^4.4.4",
    "passport": "~0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.5"
  },
  "engines": {
    "node": "0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donejs/bitballs.git"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT",
  "devDependencies": {
    "documentjs": "^0.4.4",
    "donejs": "^1.0.0",
    "donejs-cli": "^1.0.1",
    "donejs-deploy": "^0.4.1",
    "jshint": "^2.9.1",
    "maildev": "^0.14.0"
  },
  "donejs": {
    "deploy": {
      "root": "public/dist",
      "services": {
        "production": {
          "type": "firebase",
          "config": {
            "firebase": "bitballs-donejs",
            "public": "./public/dist",
            "headers": [
              {
                "source": "/**",
                "headers": [
                  {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  },
  "urls": {
    "prod": "https://bitballs.herokuapp.com/",
    "dev": "http://localhost:5000/"
  }
}
